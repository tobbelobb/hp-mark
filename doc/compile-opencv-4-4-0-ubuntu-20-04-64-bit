# Just executing this script and hoping that everything works is overly optimistic
# Copy-paste the lines one by one instead

sudo apt update
sudo apt upgrade

#Not entirely sure if these are correct or enough
sudo apt-get install cmake gfortran \
                     libjpeg-dev libtiff-dev libgif-dev \
                     libavcodec-dev libavformat-dev libswscale-dev \
                     libgtk2.0-dev libcanberra-gtk* \
                     libxvidcore-dev libx264-dev libgtk-3-dev \
                     libtbb2 libtbb-dev libdc1394-22-dev libv4l-dev \
                     libopenblas-dev libatlas-base-dev libblas-dev \
                     liblapack-dev libhdf5-dev \
                     gcc-arm* protobuf-compiler
cd ~
wget -O opencv.zip https://github.com/opencv/opencv/archive/4.4.0.zip # Has been tested to also work with 4.5.3
wget -O opencv_contrib.zip https://github.com/opencv/opencv_contrib/archive/4.4.0.zip # Has been tested to also work with 4.5.3
unzip opencv.zip
unzip opencv_contrib.zip
mv opencv-4.4.0 opencv
mv opencv_contrib-4.4.0 opencv_contrib
cd ~/opencv
mkdir build
cd ~/opencv/build
cmake -D CMAKE_BUILD_TYPE=RELEASE \
      -D CMAKE_INSTALL_PREFIX=/usr/local \
      -D OPENCV_GENERATE_PKGCONFIG=ON \
      -D OPENCV_EXTRA_MODULES_PATH=~/opencv_contrib/modules \
      -D WITH_OPENMP=ON \
      -D BUILD_TIFF=ON \
      -D WITH_FFMPEG=ON \
      -D WITH_GSTREAMER=ON \
      -D WITH_TBB=ON \
      -D BUILD_TBB=ON \
      -D WITH_EIGEN=OFF \
      -D OPENCV_ENABLE_NONFREE=ON \
      -D BUILD_NEW_PYTHON_SUPPORT=ON \
      -D BUILD_opencv_python3=TRUE ..

make -j4

sudo make install
sudo ldconfig
sudo apt update
cd ~
rm opencv.zip
rm opencv_contrib.zip
reboot

# You'll still maybe have a missing link in the OS.
# Fix it like this:
cd /usr/include
sudo ln -s opencv4/opencv2/ opencv2
